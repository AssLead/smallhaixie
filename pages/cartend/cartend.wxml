<view class="older-section text-center" style="background: #fff;    margin-bottom: 0;">
    <view class="f15px">{{activelist.detailsBean.activitiArea}}{{activelist.detailsBean.title}}</view>
    <view class="f18px" style="line-height: 3em">-{{activelist.detailsBean.money}}</view>
    <view class="bcf">交易成功</view>
    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="18" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap"  bindregionchange="regionchange" show-location style="width: 100%; height: 158px;margin: 20px 0"></map>
</view>

<view class="older-sec" style="background: #fff;border-top: 1px solid #e0e0e0; font-size: 12px">
    <view class="older-line" style="border-bottom: 0"><span class="pull-right">{{activelist.detailsBean.createDate}}</span>活动时间</view>
    <view class="older-line" style="border-bottom: 0"><span class="pull-right">微信支付</span>付款方式</view>
    <view class="older-line" style="border-bottom: 0"><span class="pull-right">{{activelist.detailsBean.integral}}积分</span>积分奖励</view>

</view>