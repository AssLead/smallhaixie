            </view>
           
        </view>

        <view class="edit-l">
			<view class="edit-la">
				<span class="pull-right"><i class="fa fa-angle-right">></i></span>音乐
            </view>
           
        </view>

        <view class="form-group" style="border-bottom: 0">
        	<button class="btn-red pull-right" formType="submit" size="default" plain="false" >保存</button>
        </view>
   	</form>
</view>