				<span class="pull-right"><i class="fa fa-angle-right">></i></span>体育
            </view>
            <view  class="edit-lb" >
            	<span wx:for="{{tag}}" data-key='{{index}}' wx:if="{{item.state == 1}}" class="edit-btn">{{item.name}}</span>
