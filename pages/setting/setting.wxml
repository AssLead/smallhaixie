		<view class="section">
		    <view class="section__title">手机</view>
		    <input type="number" maxlength="11" placeholder="" value="15012345678" class="edit-input" />
		</view>
		<view class="section">
		    <view class="section__title">从事行业</view>
		    <input placeholder="" class="edit-input" value="会计" />
		</view>

		<view class="f14px mgtb25">兴趣爱好</view>
