.edit-nem-img {
    position: relative;
}
image {
    width: 100%;
    vertical-align: middle;
    border: 0;
}
.edit-nem-img span {
    position: absolute;
    display: block;
    bottom: -20px;
    right: 15px;
    color:#000;
}

.edit-note {
    margin-top: 2em;
}
.container {
    padding-right: 20px;
    padding-left: 20px;
    margin-right: auto;
    margin-left: auto;
}
.section {
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 15px;
}
.section__title {
	max-width: 100%;
    margin-bottom: 5px;
    font-weight: 700;
}
.edit-input {
    border: 0;
    line-height: 2em;
    font-size: 14px;
    width: 100%;
}
.edit-line {
    line-height: 3em;
    border-bottom: 1px solid #e0e0e0;
    font-size: 12px;
    padding-bottom: .5em;
}
.bcf {
    color: #00a69a !important;
}
.mgtb25 {
    margin: 25px 0 10px;
}
.f14px {
    font-size: 14px !important;
}
.edit-l {
    border-bottom: 1px solid #e0e0e0;
}

.edit-la {
    font-size: 14px;
    padding: 1em 0;
    display: block;
}
.edit-lb {
	margin-bottom: 10px;
}
.edit-btn {
    border: 1px solid #00a69a;
    color: #00a69a !important;
    border-radius: 0.3em;
    margin-top: .75em;
    margin-right: 10px;
    display: inline-block;
    padding: .1em .8em;
}
.btn-red {
    display: block;
    background: #ea5e5d !important;
    color: #fff !important;
    margin: 20px 0;
    border-radius: 0.4em;
    width: 108px;
    border: 0!important;
}
.picker {
    font-size: 14px;
    line-height:2em;
}

.free-radio {
    display: block;
    float: left;
    width: 50px;
    text-align: center;
    line-height: 30px;
    background: #fff;
    margin-right: 5px;
    margin-bottom: 5px;
    border: 1px solid #efefef;
}

.is_checked {
    background:#00a69a;
    color: #fff;
}