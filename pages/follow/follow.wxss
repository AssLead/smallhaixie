.container {
    padding-right: 20px;
    padding-left: 20px;
    margin-right: auto;
    margin-left: auto;
}
.follow-block {
    border-bottom: 1px solid #e0e0e0;
    padding: 2em 0;
}
.pull-right {
    float: right!important;
}
.pull-left {
    float: left!important;
}
.follow-headimg1 image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 1em;
}
.follow-name {
    line-height: 65px;
    font-size: 14px;
    font-weight: 700;
}
.follow-btn {
    padding: 8px 14px 8px 23px;
    display: block;
    border: 1px solid #00a69a;
    border-radius: .5em;
    margin-top: 13px;
}

.bcf {
