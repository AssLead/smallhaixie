page {
  height: 100%;
  background: #fff;
  color: #484848;
}

.container {
  padding: 15rpx 30rpx;
}

.item_header {
  padding: 30rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}

.v {
  width: 80%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
}

.headimg {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.name {
  font-size: 35rpx;
  font-weight: bold;
}

.sign {
  font-size: 30rpx;
}

.menu_list {
  background: #fff;
}

.menu_item {
  display: flex;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}

.menu_right {
  width: 48rpx;
  height: 48rpx;
}

.menu_left_txt {
  font-size: 30rpx;
  font-weight: bold;
}

